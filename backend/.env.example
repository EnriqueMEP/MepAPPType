# filepath: backend/.env.example
# Servidor
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Base de Datos
DB_HOST=localhost
DB_PORT=5432
DB_USER=mep_user
DB_PASSWORD=mep_password
DB_NAME=mep_projects_db

# Base de Datos de Pruebas
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=mep_test_user
TEST_DB_PASSWORD=mep_test_password
TEST_DB_NAME=mep_projects_test_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Email Configuration
# Para Gmail, usar configuraci√≥n app-specific password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@mep-projects.com

# Para Mailtrap (desarrollo)
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_USER=your-mailtrap-user
# SMTP_PASSWORD=your-mailtrap-password

# Para SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# Archivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Chat
CHAT_HISTORY_LIMIT=100
SOCKET_CORS_ORIGIN=http://localhost:5173
