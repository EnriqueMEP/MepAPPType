{
  "name": "mep-projects",
  "version": "1.0.0",
  "description": "AplicaciÃ³n empresarial modular escalable - MEP Projects",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "start": "cd backend && npm start",
    "test": "cd backend && npm test",
    "test:watch": "cd backend && npm run test:watch",
    "migrate": "cd backend && npm run migrate",
    "migrate:rollback": "cd backend && npm run migrate:rollback",
    "seed": "cd backend && npm run seed",
    "setup": "powershell -ExecutionPolicy Bypass -File setup.ps1",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up",
    "docker:build": "docker-compose build",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "lint": "cd frontend && npm run lint && cd ../backend && npm run lint",
    "format": "cd frontend && npm run format && cd ../backend && npm run format"
  },
  "devDependencies": {
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "postcss": "^8.5.4",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.1.8"
  },
  "keywords": [
    "enterprise",
    "crm",
    "erp",
    "hrms",
    "tasks",
    "chat",
    "react",
    "nodejs",
    "typescript",
    "postgresql"
  ],
  "author": "MEP Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
